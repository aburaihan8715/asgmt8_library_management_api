generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  bookId          String @id @default(uuid())
  title           String
  genre           String
  publishedYear   Int
  totalCopies     Int
  availableCopies Int

  @@map("books")
}

model Member {
  memberId       String   @id @default(uuid())
  name           String   @unique
  email          String
  phone          String
  membershipDate DateTime

  @@map("members")
}
